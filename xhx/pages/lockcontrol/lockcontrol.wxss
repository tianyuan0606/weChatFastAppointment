/* pages/lockcontrol/lockcontrol.wxss */
.search-bar {
  border-bottom: #cccccc 1px solid;
}
.search-frame {
  width: 90%;
  height: 28px;
  margin-bottom: 8px;
  margin-left: 5%;
  border-radius: 4px;
  background-color: #cccccc;
  position: relative;
}
.image-search {
  margin-left: 7px;
  vertical-align: middle;
  height: 20px;
  width: 20px;
}
.search-input {
  height: 100%;
  width: 90%;
  left: 34px;
  right: 7px;
  position: absolute;
  display: inline-block;
  line-height: 100%;
  font-size: 13px;
  margin-left: 7px;
}
.table-cell {
  height: 55px;
  background-color: #ffffff;
  position: relative;
  border-bottom: #cccccc 1px solid;
}
.image-parking {
  width: 28px;
  height: 28px;
  margin-left: 12px;
  vertical-align: middle;
}
.parking-name {
  line-height: 55px;
  margin-left: 10px;
  font-size: 15px;
}
.button-select {
  width: 20px;
  height: 20px;
  position: absolute;
  right: 12px;
  top: 50%;
  transform: translateY(-50%);
}
.operation-bar {
  height: 48px;
  width: 100%;
  position: absolute;
  bottom: 0;
  border-top: #cccccc 1px solid;
  background-color: #ffffff;
}
.button-select-all {
  width: 20px;
  height: 20px;
  position: absolute;
  padding: 5px;
  left: 7px;
  bottom: 9px;
}
.text-select-all {
  display: inline-block;
  font-size: 15px;
  line-height: 48px;
  margin-left: 42px;
}
.text-selected {
  display: inline-block;
  font-size: 15px;
  line-height: 48px;
  margin-left: 18px;
}
.text-selected-num {
  display: inline-block;
  font-size: 15px;
  line-height: 48px;
  color: #d01c95;
}
.button-control-locks {
  float: right;
  width: 130px;
  height: 48px;
  background-color: #d01c95;
  font-size: 18px;
  line-height: 48px;
  color: white;
  text-align: center;
}
.control-wrap{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0,0,0,0.6);
  z-index: 2;
}
.control-content{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  width: 640rpx;
  height: 480rpx;
  background-color: #ffffff;
  border-radius: 25rpx;
}
.control-title{
  width: 100%;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 30rpx;
}
.control-btn{
  width: 100%;
  height: 330rpx;
  display: flex;
   align-items: center;
  justify-content: center;
}
.control-open{
  display: block;
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background-color: #d01c95;
  text-align: center;
  line-height: 160rpx;
  color: #ffffff;

}
.control-close{
  display: block;
  margin-left: 40rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background-color: #d01c95;
  text-align: center;
  line-height: 160rpx;
  color: #ffffff;
}
.controlwrap-close{
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #d01c95;
}