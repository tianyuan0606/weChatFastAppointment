page{
  width: 100%;
  height: 100%;
}
.canvas-style{
  position: absolute;
  left: 50%;
  top: 30%;
  transform: translate(-50%,0);
  width: 80px;
  height: 104px;
}
.image-login {
  margin-left: 50%;
  margin-top: 20%;
  transform: translateX(-50%);
  width: 68px;
  height: 68px;
}
.text-app-name {
  font-size: 18px;
  font-weight: bold;
  margin-top: 7%;
  text-align: center;
}
.text-introduction {
  font-size: 13px;
  color: #888888;
  margin-top: 10px;
  text-align: center;
}
.button-authorization {
  height: 40px;
  width: 60%;
  color: white;
  font-weight: lighter;
  line-height: 40px;
  margin-left: 50%;
