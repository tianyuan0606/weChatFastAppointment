/* pages/parkingRelease/parkingRelease.wxss */
page{
  background-color: #f5f5f5;
  width: 100%;
  height: 100%;
}
.common-container{
  background-color: white;
  margin-top: 30rpx;
}
.parking-count-container{
  width: 100%;
  height: 100rpx;
  display: flex;
}
.parking-count-label{
  width: 30%;
  height: 100rpx;
  font-size: 36rpx;
  line-height: 100rpx;
  text-align: center;
}
.parking-count{
  height: 100rpx;
}
.placeholder{
  font-size: 30rpx;
}
.auto-publish-header{
  display: flex;
  justify-content: space-between;
  padding: 20rpx 40rpx;
}
.weekdays-container{
  padding: 20rpx 0;
  display: flex;
  justify-content: space-evenly;
}
.week-days{
  display: inline-block;
  padding: 20rpx;
  border-radius:50%;
  width: 30rpx;
  height: 30rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  border: 1px solid #dddddd;
}
.auto-publish-prompt{
  padding: 20rpx;
  font-size: 24rpx;
  color: #888888;
}
.auto-publish-prompt text{
  display: block;
}
.submit-container{
  position: absolute;
  bottom: 0;
  padding: 40rpx;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content: center;
}
.submit-button{
  width: 50%;
  height: 70rpx;
  border-radius: 35rpx;
  font-size: 30rpx;
  color: white;
  border: none;
  background: linear-gradient(to right,#d01d95,#830e90);
  text-align: center;
  line-height: 70rpx;
}